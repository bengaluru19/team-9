<!DOCTYPE html>
<html>
    <head>
        <title>Careworks</title>
        <meta name="description" content="This is the description">
        
        <link href="/css/styles.css" rel="stylesheet" type="text/css">

    </head>
    <body>
        <header class="main-header">
            <h1 class="ngo-name ngo-name-large">Careworks</h1>
        </header>

        <section class="content-section container">
            <h2 class="section-header">LOGIN</h2>
            <div class="login-page">
                <div class="form">
                  <form class="register-form">
                    <input type="text" placeholder="name"/>
                    <input type="password" placeholder="password"/>
                    <input type="text" placeholder="email address"/>
                    <button>create</button>
                    <p class="message">Already registered? <a href="#">Sign In</a></p>
                  </form>
                  <form class="login-form">
                    <input type="text" placeholder="username"/>
                    <input type="password" placeholder="password"/>
                    <button class="tour-item tour-btn btn btn-primary">login</button>
                    <p class="message">Not registered? <a href="#">Create an account</a></p>
                  </form>
                </div>
              </div>
        </section>
        

        <section class="content-section container">
            <h2 class="section-header">Upcoming Events</h2>
            <div>
                <% events.forEach(function(event) { %>
                    <div class="tour-row">
                        <span class="tour-item tour-date"><%= event.name %></span>
                        <span class="tour-item tour-city"><%= event.city %></span>
                        <span class="tour-item tour-arena"><%= event.date %></span>
                        <button type="button" class="tour-item tour-btn btn btn-primary"><%= event.numPeople %></button>
                    </div>
                <% }); %>
            </div>
        </section>

        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="band-name">Careworks</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
                            <img src="../Images/YouTubeLogo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="../Images/FacebookLogo.png">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>