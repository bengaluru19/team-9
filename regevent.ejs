        <section class="content-section container">
            <h2 class="section-header">Add an Event</h2>
            <div class="login-page">
                <div class="form">
                  <form action="neweventdata" method="POST">
                    <input type="text" placeholder="name" name="name" required>
                    <input type="text" placeholder="city" name="city" required>
                    <input type="date" placeholder="date" name="date" required>
                    <input type="text" placeholder="required volunteers" name="reqvol" required>
                    <input type="text" placeholder="activities" name="activities">
                    <input id="form-submit" type="submit" value="Submit">
                  </form>
                </div>
              </div>
        </section>

        <footer class="main-footer">
            <div class="container main-footer-container">
                <h3 class="band-name">Careworks</h3>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
