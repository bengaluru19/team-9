<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Generate Report</title>
    <script type="text/javascript">
        function send() {
            document.getElementById("addevent").submit();
        }
    </script>
    <link href="css/styles.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper">
    <header class="main-header">
        <h1 class="ngo-name ngo-name-large">Careworks</h1>
    </header>

    <section>
        <div class="container">
            <span><h1 class="welcome-header">Welcome <%= volunteer.name %></h1></span>
        </div>
    </section>

    <section>
        <hr class="welcome-sep">
        <div class="container metadata">
            <ul class="metadata-ul">
                <li class="metadata-li">
                    <h2><%= volunteer.events %></h2>
                    <span>Events Attended</span>
                </li>
                <li class="metadata-li">
                    <h2><%= volunteer.hours %></h2>
                    <span>Hours Worked</span>     
                </li>
            </ul>
        </div>
        <hr class="welcome-sep">
    </section>

    <div class="container">
        <h3 class="tour-h3">Registered Events</h3>
        <div class="tour-row">
            <span class="tour-item tour-head">Name</span>
            <span class="tour-item tour-head">City</span>
            <span class="tour-item tour-head">Date</span>
            <span class="tour-item tour-head">Activity</span>
            <span class="tour-item tour-head">Volunteers</span>
        </div>
        <div class="tour-row">
            <% events.forEach(function(eve) { %>
                <div class="tour-row">
                    <span class="tour-item tour-head"><%= eve.name %></span>
                    <span class="tour-item tour-city"><%= eve.city %></span>
                    <span class="tour-item tour-arena"><%= eve.date %></span>
                    <span class="tour-item tour-city"><%= eve.activity %></span>
                    <span class="tour-item tour-arena"><%= eve.numPeople %></span>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="container">
        <h3 class="tour-h3">Upcoming Events</h3>
        <div class="tour-row">
            <span class="tour-item tour-head">Name</span>
            <span class="tour-item tour-head">Email</span>
            <span class="tour-item tour-head">Phone</span>
            <span class="tour-item tour-head">Events</span>
            <span class="tour-item tour-head">Hours</span>
        </div>
        <div class="tour-row">
            <% newEvents.forEach(function(ne) { %>
                <div class="tour-row">
                    <span class="tour-item tour-head"><%= ne.name %></span>
                    <span class="tour-item tour-city"><%= ne.city %></span>
                    <span class="tour-item tour-arena"><%= ne.date %></span>
                    <span class="tour-item tour-city"><%= ne.activity %></span>
                    <span class="tour-item tour-arena"><%= ne.numPeople %></span>
                    <form class="noform" action="/addeventdata" method="post" id="addevent">
                        <button class="btn btn-primary btn-danger" onclick="send()">Apply</button>
                    </form>
                    
                </div>
            <% }); %>
        </div>
    </div>


    <footer class="main-footer">
        <div class="container main-footer-container">
            <h3 class="ngo-footer-name">Careworks</h3>
            <ul class="nav footer-nav">
                <li>
                    <a href="https://www.youtube.com" target="_blank">
                        <img src="Images/YoutubeLogo.png">
                    </a>
                </li>
                <li>
                    <a href="https://www.facebook.com" target="_blank">
                        <img src="Images/FacebookLogo.png">
                    </a>
                </li>
            </ul>
        </div>
    </footer>

</body>